<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SkiRandoBriancon" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/lightGrey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/darkBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <!-- Créer le style des spinner -->
        <item name="android:spinnerItemStyle">@style/DefaultTextStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/DefaultTextStyle</item>
    </style>

    <style name="Theme.SkiRandoBriancon" parent="Base.Theme.SkiRandoBriancon" />


    <!-- Créer le composant Texte par défaut -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <!-- Créer le composant sous-Titre par défaut -->
        <style name="subtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Créer le composant Titre par défaut -->
    <style name="titleTextStyle" parent="subtitleTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Créer le composant Pop-up par défaut -->
    <style name="popupTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style pour la bottom navigation view -->
    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>
</resources>